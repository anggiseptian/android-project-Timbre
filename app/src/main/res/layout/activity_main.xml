<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_launcher"
        android:gravity="center" >

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRowBtn1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp" >

                <TextView
                    android:id="@+id/txa1"
                    android:text=""
                    android:padding="2dp">
                </TextView>

                <Button
                    android:id="@+id/btn_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_merge_type"
                    android:gravity="center|center_horizontal"
                    android:padding="1dp"
                    android:text="Join"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txb1"
                    android:text=""
                    android:padding="2dp">
                </TextView>
                <Button
                    android:id="@+id/btn_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_content_cut"
                    android:text="Cut"
                    android:textStyle="bold"
                    android:gravity="center|center_horizontal"
                    android:padding="1dp" />
                <TextView
                    android:id="@+id/txc2"
                    android:text=""
                    android:padding="2dp">
                </TextView>
                <Button
                    android:id="@+id/btn_instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_autorenew"
                    android:text="Convert"
                    android:textStyle="bold"
                    android:gravity="center|center_horizontal"
                    android:padding="1dp"
                    />
                <TextView
                    android:id="@+id/txd2"
                    android:text=""
                    android:padding="2dp">
                </TextView>
            </TableRow>
            <TableRow
                android:id="@+id/tableRowBtn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp" >

                <TextView
                    android:id="@+id/txa2"
                    android:text=""
                    android:padding="2dp">
                </TextView>

                <Button
                    android:id="@+id/btn_facebook1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_low_priority"
                    android:gravity="center|center_horizontal"
                    android:padding="1dp"
                    android:text="Omit"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txb"
                    android:text=""
                    android:padding="2dp">
                </TextView>
                <Button
                    android:id="@+id/btn_twitter1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_call_split"
                    android:text="Split"
                    android:textStyle="bold"
                    android:gravity="center|center_horizontal"
                    android:padding="1dp" />
                <TextView
                    android:id="@+id/txc3"
                    android:text=""
                    android:padding="2dp">
                </TextView>
                <Button
                    android:id="@+id/btn_instagram1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_line_style"
                    android:text="Bitrate"
                    android:textStyle="bold"
                    android:gravity="center|center_horizontal"
                    android:padding="1dp"
                    />

                <TextView
                    android:id="@+id/txd3"
                    android:text=""
                    android:padding="2dp">
                </TextView>
            </TableRow>
            <TableRow
                android:id="@+id/tableRowBtn2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp" >

                <TextView
                    android:id="@+id/txa3"
                    android:text=""
                    android:padding="2dp">
                </TextView>
                <Button
                    android:id="@+id/btn_facebook2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_donut_large"
                    android:text="Speed"
                    android:textStyle="bold"
                    android:gravity="center|center_horizontal"
                    android:padding="1dp" />
                <TextView
                    android:id="@+id/txaa"
                    android:text=""
                    android:padding="2dp">
                </TextView>
                <Button
                    android:id="@+id/btn_face"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_music_video"
                    android:text="Reverse"
                    android:textStyle="bold"
                    android:gravity="center|center_horizontal"
                    android:padding="1dp" />
                <TextView
                    android:id="@+id/txa"
                    android:text=""
                    android:padding="2dp">
                </TextView>

                <Button
                    android:id="@+id/btn_facebook3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_volume"
                    android:gravity="center|center_horizontal"
                    android:padding="1dp"
                    android:text="Volume"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txd1"
                    android:text=""
                    android:padding="2dp">
                </TextView>
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Audio "
            android:drawableLeft="@drawable/ic_music_note"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView

        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>


